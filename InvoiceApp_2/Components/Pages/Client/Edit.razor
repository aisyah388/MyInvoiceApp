@page "/client/edit/{Id:guid}"

<MudText Typo="Typo.h4">Edit Client</MudText>
<MudGrid>
    <MudItem xs="12" sm="6" md="6" xl="6">
        <MudCard Style="padding-bottom: 4.1rem;">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Client Details</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="4">
                        <MudText Typo="Typo.body1">Name</MudText>
                    </MudItem>
                    <MudItem xs="8">
                        <MudTextField @bind-Value="@client.Name" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudText Typo="Typo.body1">Address</MudText>
                    </MudItem>
                    <MudItem xs="8">
                        <MudTextField @bind-Value="@client.Address" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudText Typo="Typo.body1">Phone</MudText>
                    </MudItem>
                    <MudItem xs="8">
                        <MudTextField @bind-Value="@client.Phone" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudText Typo="Typo.body1">Email</MudText>
                    </MudItem>
                    <MudItem xs="8">
                        <MudTextField @bind-Value="@client.Email" Variant="Variant.Outlined" />
                    </MudItem>
                </MudGrid>
                <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save" Color="Color.Primary" OnClick="UpdateClient">
                    Save Changes
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

@code {
    [Parameter]
    public Guid Id { get; set; }
    private Client client = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            client = await Http.GetFromJsonAsync<Client>($"api/client/{Id}");

            if (client is null)
            {
                Snackbar.Add("Client not found.", Severity.Error);
                Navigation.NavigateTo("/client/list");
                return;
            }

            if (client.Id != Guid.Empty)
            {
                client = await Http.GetFromJsonAsync<Client>($"api/client/{client.Id}");
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Initialization error: {ex.Message}", Severity.Error);
        }
    }

    private async Task UpdateClient()
    {
        try
        {
            var response = await Http.PutAsJsonAsync($"api/client/{client.Id}", client);
            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add("Client details updated successfully.", Severity.Success);
                Navigation.NavigateTo("/client/list");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"Failed to update: {error}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }
}